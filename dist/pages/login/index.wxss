.login {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  color: white;
}

.login-header {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.logo {
  margin-bottom: 30rpx;
}

.logo-icon {
  font-size: 120rpx;
}

.app-name {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 16rpx;
}

.app-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 40rpx 0;
}

.auth-section {
  margin-bottom: 50rpx;
}

.auth-info {
  text-align: center;
  margin-bottom: 40rpx;
}

.auth-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 20rpx;
}

.auth-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.5;
  padding: 0 20rpx;
}

.auth-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
}

.wechat-btn {
  background: #07c160;
  color: white;
}

.phone-btn {
  background: #ff6b6b;
  color: white;
}

.btn-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.user-info {
  text-align: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 12rpx;
}

.welcome {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.phone-info {
  text-align: center;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.phone-label {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 12rpx;
}

.phone-number {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.phone-input-section {
  margin-bottom: 30rpx;
}

.phone-input {
  width: 100%;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: white;
  margin-bottom: 30rpx;
}

.phone-input::-moz-placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.phone-input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.confirm-btn {
  background: #007aff;
  color: white;
}

.confirm-btn[disabled] {
  background: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.6);
}

.phone-display {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 12rpx;
}

.success-section {
  text-align: center;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 40rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.success-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.success-text {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.login-footer {
  text-align: center;
  padding: 30rpx 0 20rpx;
}

.privacy-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.4;
}
