@charset "UTF-8";
.oral-ai {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  color: white;
}
.header {
  text-align: center;
  margin-bottom: 50rpx;
  padding-top: 40rpx;
}
.ai-logo {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.ai-icon {
  font-size: 60rpx;
  margin-right: 20rpx;
}
.ai-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
}
.ai-subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 16rpx;
}
.section {
  margin-bottom: 50rpx;
}
.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 4rpx solid rgba(255, 255, 255, 0.6);
}
/* AI工具卡片 */
.ai-tools {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}
.tool-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
}
.tool-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}
.diagnosis-icon {
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
}
.analysis-icon {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}
.report-icon {
  background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
}
.icon-text {
  font-size: 40rpx;
}
.tool-name {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 12rpx;
}
.tool-desc {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 24rpx;
  line-height: 1.4;
}
.tool-action {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  border: none;
  font-size: 24rpx;
  font-weight: 600;
}
/* AI能力展示 */
.capabilities {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-around;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}
.capability-item {
  text-align: center;
}
.capability-number {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffd700;
  margin-bottom: 12rpx;
}
.capability-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}
/* 功能列表 */
.feature-list {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}
.feature-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}
.feature-item:last-child {
  border-bottom: none;
}
.feature-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.feature-dot.new {
  background: #00ff88;
}
.feature-dot.updated {
  background: #ffd700;
}
.feature-dot.coming {
  background: #ff6b6b;
}
.feature-text {
  flex: 1;
  font-size: 28rpx;
  color: white;
}
.feature-tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  font-weight: 600;
}
